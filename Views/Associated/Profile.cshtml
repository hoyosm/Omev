@model WebApplication1.Models.AssociatedModels

@{
    ViewBag.Title = "Actualizar Perfil";
}

<style>
    body {
        background-image: none;
    }

    .container {
        max-width: 100%;
    }
</style>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 margin-top-container">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center ">
        @*<img class="btn-new-associated-title" alt="Editar Perfil" src="~/Images/BTN-EDIT-PERFIL.png" />*@
        <h3>Editar Perfil</h3>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center" style="padding:2%;color:#558F00;">
        <img alt="profile" class="img-circle profile-img" src="~/Images/userdemo.jpg" style="left:0;" />
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.name, "Nombre", htmlAttributes: new { @class = "col-md-5 col-lg-5 col-xs-2 col-sm-2 control-label font-label-associated" })
                <div class="col-md-7 col-lg-7 col-xs-10 col-sm-10">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.phone_number, "Celular", htmlAttributes: new { @class = "ccol-md-5 col-lg-5 col-xs-2 col-sm-2 control-label font-label-associated" })
                <div class="col-md-7 col-lg-7 col-xs-10 col-sm-10">
                    @Html.EditorFor(model => model.phone_number, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.document, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.email, "Correo", htmlAttributes: new { @class = "col-md-5 col-lg-5 col-xs-2 col-sm-2 control-label font-label-associated" })
                <div class="col-md-7 col-lg-7 col-xs-10 col-sm-10">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.product, "Interés", htmlAttributes: new { @class = "col-md-5 col-lg-5 col-xs-2 col-sm-2 control-label font-label-associated" })
                <div class="col-md-7 col-lg-7 col-xs-10 col-sm-10">
                    @Html.EditorFor(model => model.product, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group text-center">
                <img alt="Registrar" src="~/Images/GUARDAR.png" class="btn-new-associated" />
            </div>
        </div>
    }
</div>
